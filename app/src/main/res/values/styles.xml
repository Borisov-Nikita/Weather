<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="expandedBarTextStyle" parent="Theme.Weather">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="currentWeatherItemDescriptionTextStyle" parent="Theme.Weather">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="currentWeatherItemValueTextStyle" parent="Theme.Weather">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="forecastItemTextStyle" parent="Theme.Weather">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/forecast_item_text_size</item>
    </style>

    <style name="forecastItemValueTextStyle" parent="Theme.Weather">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/forecast_item_value_text_size</item>
    </style>

    <style name="textInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_outlined_stroke_color</item>
        <item name="android:textColorHint">@color/text_input_layout_outlined_hint_color</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/smokyWhite</item>
    </style>

    <style name="textInputEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
    </style>

    <style name="textViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_margin">@dimen/text_view_margin</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:background">@drawable/background_text_view</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>